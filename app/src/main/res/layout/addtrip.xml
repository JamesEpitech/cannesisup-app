<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addtrip"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/addTripTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/agbalumoo"
        android:text="Adding a Trip"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="334dp"
        android:layout_height="170dp"
        android:layout_marginTop="164dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupSizeInput"
        app:singleSelection="false"
        tools:ignore="MissingConstraints">

        <com.google.android.material.chip.Chip
            android:id="@+id/sportChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baskervville"
            android:text="Sport"
            app:chipBackgroundColor="@color/chip_color_state"
            app:closeIconEnabled="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/cultureChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baskervville"
            android:text="Culture"
            app:chipBackgroundColor="@color/chip_color_state"
            app:closeIconEnabled="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/natureChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baskervville"
            android:text="Nature"
            app:chipBackgroundColor="@color/chip_color_state"
            app:closeIconEnabled="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/wellbeingChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baskervville"
            android:text="Well Being"
            app:chipBackgroundColor="@color/chip_color_state"
            app:closeIconEnabled="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/restaurantsChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baskervville"
            android:text="Restaurants"
            app:chipBackgroundColor="@color/chip_color_state"
            app:closeIconEnabled="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/gastronomyChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baskervville"
            android:text="Gastronomy"
            app:chipBackgroundColor="@color/chip_color_state"
            app:closeIconEnabled="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/workshopChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baskervville"
            android:text="Workshop"
            app:chipBackgroundColor="@color/chip_color_state"
            app:closeIconEnabled="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/shoppingChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baskervville"
            android:text="Shopping"
            app:chipBackgroundColor="@color/chip_color_state"
            app:closeIconEnabled="false" />

    </com.google.android.material.chip.ChipGroup>

    <EditText
        android:id="@+id/townInput"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/baskerville"
        android:hint="Town"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupSizeInput" />

    <EditText
        android:id="@+id/groupSizeInput"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/baskerville"
        android:hint="Group Size"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTripTitle" />

    <TextView
        android:id="@+id/endDateTextView"
        android:layout_width="184dp"
        android:layout_height="22dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/baskerville"
        android:text="End Date: Not Selected"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTripTitle"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/startDateTextView"
        android:layout_width="181dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/baskerville"
        android:text="Start Date: Not Selected"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTripTitle"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/startDateButton"
        android:layout_width="137dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baskerville"
        android:text="Start Date"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/buttons"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startDateTextView"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/budgetInput"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/baskerville"
        android:hint="Budget"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/townInput" />

    <Button
        android:id="@+id/endDateButton"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baskerville"
        android:text="End Date"
        android:textSize="16sp"
        android:backgroundTint="@color/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endDateTextView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/registerTripButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/baskerville"
        android:text="Register trip"
        android:backgroundTint="@color/buttons"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>